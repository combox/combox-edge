# Nginx Edge
EDGE_BIND_IP=0.0.0.0
EDGE_HTTP_PORT=80
EDGE_HTTPS_PORT=443
EDGE_TOOLS_HTTPS_PORT=9443
EDGE_TLS_DOMAIN=localhost
EDGE_STATUS_DOMAIN=status.localhost
CERTBOT_EMAIL=you@example.com
CERTBOT_STAGING=1
BACKEND_UPSTREAM=combox-backend:8080
APP_UPSTREAM=combox-app:4173
SITE_UPSTREAM=host.docker.internal:3001
BACKEND_SERVERS=server combox-backend:8080 resolve;
APP_SERVERS=server combox-app-mtls:443 resolve;
SITE_SERVERS=server host.docker.internal:3001 resolve;
ADMIN_UI=pgweb
COMPOSE_PROFILES=admin-pgweb
LOGS_UI_UPSTREAM=logs-ui:8080
EDGE_CLIENT_MAX_BODY_SIZE=25m
EDGE_WS_READ_TIMEOUT=3600s
EDGE_UPSTREAM_TLS_VERIFY=on
EDGE_UPSTREAM_TLS_VERIFY_DEPTH=2
EDGE_UPSTREAM_TLS_TRUSTED_CA=/etc/nginx/mtls/ca.crt
EDGE_UPSTREAM_TLS_CLIENT_CERT=/etc/nginx/mtls/edge.crt
EDGE_UPSTREAM_TLS_CLIENT_KEY=/etc/nginx/mtls/edge.key
EDGE_BACKEND_TLS_SNI=combox-backend
EDGE_APP_TLS_SNI=combox-app-mtls
EDGE_SITE_TLS_SNI=host.docker.internal
EDGE_UPSTREAM_TRIES=3
EDGE_UPSTREAM_TRIES_TIMEOUT=5s
EDGE_RATE_LIMIT_RPS=30r/s
EDGE_RATE_LIMIT_BURST=60
EDGE_DEFAULT_LOCALE=en
VPN_CIDR=10.8.0.0/24
VPN_DOCKER_CIDR=172.18.0.0/16

GATUS_LOG_LEVEL=info

# WireGuard
WG_HOST=127.0.0.1
WG_PASSWORD_HASH=replace_with_bcrypt_hash
WG_PORT=51820
WG_UI_PORT_INTERNAL=51821
WG_DEFAULT_ADDRESS=10.8.0.x
WG_DEFAULT_DNS=1.1.1.1
WG_ALLOWED_IPS=10.8.0.0/24,${WG_HOST}/32
WG_PERSISTENT_KEEPALIVE=25
WG_DEVICE=eth0

# WireGuard UI 2FA (Authelia)
# Set this to the same host/domain you use in browser (IP or FQDN).
EDGE_AUTHELIA_SESSION_DOMAIN=localhost
EDGE_AUTHELIA_TOTP_ISSUER=ComboxEdge
EDGE_AUTHELIA_SESSION_SECRET=replace_with_long_random_secret_32_chars_min
EDGE_AUTHELIA_STORAGE_ENCRYPTION_KEY=replace_with_long_random_secret_32_chars_min
EDGE_AUTHELIA_IDENTITY_VALIDATION_RESET_PASSWORD_JWT_SECRET=replace_with_long_random_secret_32_chars_min
EDGE_AUTHELIA_ADMIN_USERNAME=admin
EDGE_AUTHELIA_ADMIN_DISPLAYNAME=Edge Admin
EDGE_AUTHELIA_ADMIN_EMAIL=admin@example.com
# Set either hash or plain password. Hash is preferred.
EDGE_AUTHELIA_ADMIN_PASSWORD_HASH=replace_with_argon2_hash
EDGE_AUTHELIA_ADMIN_PASSWORD=

# Optional multi-user mode (comma-separated usernames). When set,
# user-specific vars below are used and single admin vars above are ignored.
# EDGE_AUTHELIA_USERS=admin,devops
# EDGE_AUTHELIA_USER_ADMIN_DISPLAYNAME=Edge Admin
# EDGE_AUTHELIA_USER_ADMIN_EMAIL=admin@example.com
# EDGE_AUTHELIA_USER_ADMIN_PASSWORD_HASH=replace_with_argon2_hash
# EDGE_AUTHELIA_USER_ADMIN_PASSWORD=
# EDGE_AUTHELIA_USER_DEVOPS_DISPLAYNAME=DevOps
# EDGE_AUTHELIA_USER_DEVOPS_EMAIL=devops@example.com
# EDGE_AUTHELIA_USER_DEVOPS_PASSWORD_HASH=
# EDGE_AUTHELIA_USER_DEVOPS_PASSWORD=replace_with_strong_password

# Pgweb / PgAdmin
# For pgweb:
#   ADMIN_UI=pgweb
#   COMPOSE_PROFILES=admin-pgweb
# For pgadmin:
#   ADMIN_UI=pgadmin
#   COMPOSE_PROFILES=admin-pgadmin
PGADMIN_DEFAULT_EMAIL=admin@chat.example.com
PGADMIN_DEFAULT_PASSWORD=change_me
PGADMIN_MASTER_PASSWORD_REQUIRED=False

# Internal services bind (host-local only)
INTERNAL_BIND_IP=127.0.0.1

# Postgres
POSTGRES_DB=chat
POSTGRES_USER=chat
POSTGRES_PASSWORD=chat_local_password
POSTGRES_PORT=5432

# Valkey
VALKEY_PORT=6379

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=chat-media
MINIO_API_INTERNAL=http://minio:9000
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
