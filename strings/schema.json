{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chat-edge.local/strings/schema.json",
  "title": "Chat Edge Localized Strings",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "project",
    "services",
    "routes",
    "tools",
    "status",
    "logs",
    "errors"
  ],
  "properties": {
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "description"
      ],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 }
      }
    },
    "services": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "nginx",
        "postgres",
        "valkey",
        "minio",
        "minio_init"
      ],
      "properties": {
        "nginx": { "type": "string", "minLength": 1 },
        "postgres": { "type": "string", "minLength": 1 },
        "valkey": { "type": "string", "minLength": 1 },
        "minio": { "type": "string", "minLength": 1 },
        "minio_init": { "type": "string", "minLength": 1 }
      }
    },
    "routes": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "health",
        "private_api",
        "public_api",
        "websocket",
        "app",
        "site"
      ],
      "properties": {
        "health": { "type": "string", "minLength": 1 },
        "private_api": { "type": "string", "minLength": 1 },
        "public_api": { "type": "string", "minLength": 1 },
        "websocket": { "type": "string", "minLength": 1 },
        "app": { "type": "string", "minLength": 1 },
        "site": { "type": "string", "minLength": 1 }
      }
    },
    "tools": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "home"
      ],
      "properties": {
        "home": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "title",
            "subtitle",
            "db_name",
            "db_desc",
            "minio_name",
            "minio_desc",
            "wireguard_name",
            "wireguard_desc",
            "logs_name",
            "logs_desc",
            "note"
          ],
          "properties": {
            "title": { "type": "string", "minLength": 1 },
            "subtitle": { "type": "string", "minLength": 1 },
            "db_name": { "type": "string", "minLength": 1 },
            "db_desc": { "type": "string", "minLength": 1 },
            "minio_name": { "type": "string", "minLength": 1 },
            "minio_desc": { "type": "string", "minLength": 1 },
            "wireguard_name": { "type": "string", "minLength": 1 },
            "wireguard_desc": { "type": "string", "minLength": 1 },
            "logs_name": { "type": "string", "minLength": 1 },
            "logs_desc": { "type": "string", "minLength": 1 },
            "note": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "status": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ok",
        "healthy",
        "degraded",
        "down"
      ],
      "properties": {
        "ok": { "type": "string", "minLength": 1 },
        "healthy": { "type": "string", "minLength": 1 },
        "degraded": { "type": "string", "minLength": 1 },
        "down": { "type": "string", "minLength": 1 }
      }
    },
    "logs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "edge_started",
        "config_loaded",
        "upstream_unavailable",
        "rate_limit_exceeded"
      ],
      "properties": {
        "edge_started": { "type": "string", "minLength": 1 },
        "config_loaded": { "type": "string", "minLength": 1 },
        "upstream_unavailable": { "type": "string", "minLength": 1 },
        "rate_limit_exceeded": { "type": "string", "minLength": 1 }
      }
    },
    "errors": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "not_found",
        "forbidden",
        "bad_gateway",
        "gateway_timeout",
        "service_unavailable",
        "internal_error"
      ],
      "properties": {
        "not_found": { "type": "string", "minLength": 1 },
        "forbidden": { "type": "string", "minLength": 1 },
        "bad_gateway": { "type": "string", "minLength": 1 },
        "gateway_timeout": { "type": "string", "minLength": 1 },
        "service_unavailable": { "type": "string", "minLength": 1 },
        "internal_error": { "type": "string", "minLength": 1 }
      }
    }
  }
}
